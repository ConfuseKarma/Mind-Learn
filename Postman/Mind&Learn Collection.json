{
  "info": {
    "name": "Mind&Learn API (MariaDB)",
    "_postman_id": "7a5e3e2e-5d40-4b6a-9a5d-91e0c0c1abcd",
    "description": "Coleção para testar o backend Mind&Learn (Express + Sequelize + MariaDB).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/", "host": ["{{baseUrl}}"], "path": [""] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
              "pm.test('ok true', function () { pm.expect(pm.response.json().ok).to.eql(true); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\":\"Alice\",\n  \"email\":\"alice@example.com\",\n  \"password\":\"secret\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/auth/signup", "host": ["{{baseUrl}}"], "path": ["auth", "signup"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 201', function () { pm.response.to.have.status(201); });",
                  "pm.test('ok true', function () { pm.expect(pm.response.json().ok).to.eql(true); });"
                ]
              }
            }
          ]
        },
        {
          "name": "Login (pega token)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\":\"alice@example.com\",\n  \"password\":\"secret\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.expect(json).to.have.property('token');",
                  "pm.collectionVariables.set('token', json.token);",
                  "pm.environment.set('token', json.token);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Quizzes",
      "item": [
        {
          "name": "Listar quizzes",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/quizzes", "host": ["{{baseUrl}}"], "path": ["quizzes"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const data = pm.response.json();",
                  "pm.test('É array', function(){ pm.expect(Array.isArray(data)).to.be.true; });",
                  "if (data.length) { pm.collectionVariables.set('quizId', data[0].id); }"
                ]
              }
            }
          ]
        },
        {
          "name": "Detalhar quiz",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/quizzes/{{quizId}}", "host": ["{{baseUrl}}"], "path": ["quizzes", "{{quizId}}"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const q = pm.response.json();",
                  "pm.test('Tem questions', function(){ pm.expect(q).to.have.property('Questions'); });",
                  "if (q.Questions && q.Questions.length) {",
                  "  const answers = q.Questions.map(qq => ({ questionId: qq.id, optionId: qq.Options[0].id }));",
                  "  pm.collectionVariables.set('answers', JSON.stringify({ answers }));",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Enviar tentativa",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": { "mode": "raw", "raw": "{{answers}}" },
            "url": { "raw": "{{baseUrl}}/quizzes/{{quizId}}/attempt", "host": ["{{baseUrl}}"], "path": ["quizzes", "{{quizId}}", "attempt"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const r = pm.response.json();",
                  "pm.test('Tem score e total', function(){ pm.expect(r).to.have.property('score'); pm.expect(r).to.have.property('total'); });"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Progresso",
      "item": [
        {
          "name": "Meu progresso",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": { "raw": "{{baseUrl}}/progress/me", "host": ["{{baseUrl}}"], "path": ["progress", "me"] }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200', function () { pm.response.to.have.status(200); });",
                  "const r = pm.response.json();",
                  "pm.test('Campos principais', function(){ pm.expect(r).to.have.property('totalAttempts'); pm.expect(r).to.have.property('averageAccuracy'); pm.expect(r).to.have.property('badges'); });"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" },
    { "key": "quizId", "value": "1" },
    { "key": "answers", "value": "{\"answers\":[{\"questionId\":1,\"optionId\":1}]}" }
  ]
}

